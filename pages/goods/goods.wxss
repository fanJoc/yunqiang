.list {
    flex-wrap: wrap;
    background: #f2f2f2;
    padding: 40rpx 0;
}
.item {
    background: #fff;
    margin: 0 20rpx;
    margin-bottom: 20rpx;
    border-radius: 4px;
    overflow: hidden;
}
.item-img {
    width: 330rpx;
    height: 330rpx;
}
.item-img image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}
.item-info {
    padding: 10rpx 20rpx;
}
.item-price {
    font-size: 30rpx;
    color: red;
}
.item-name {
    font-size: 32rpx;
    margin-bottom: 8rpx;
}
.item-sale {
    font-size: 24rpx;
}